{
	"name": "apractool",
	"displayName": "ApracTool",
	"description": "ApracTool",
	"version": "0.0.1",
	"publisher": "Silkage",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onCommand:extension.ApracTool"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
			"command": "extension.ApracTool",
			"title": "新建Aprac模板",
			"icon": {
				"dark": "images/icon.png",
				"light": "images/icon.png"
			},
			"category": "ApracTool"
		}],
		"menus": {
			"explorer/context": [{
				"command": "extension.ApracTool",
				"group": "navigation",
				"when": "explorerResourceIsFolder",
				"alt": "extension.ApracTool"
			}]
		},
		"configuration": {
			"title": "ApracTool config",
			"properties": {
				"apractool.rootDir": {
					"type": "string",
					"default": "./src/www",
					"description": "网站根目录文件夹"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SilkageNet/ApracTool.git"
	}
}